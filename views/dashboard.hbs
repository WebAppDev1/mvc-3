{{> menu id="dashboard"}}

<section class="ui left aligned middle aligned segment">
  
  <h2>Playlist App Dashboard</h2>
  
  {{#unless playlists}}
    <h3 class="ui message">
      Start adding your playlists!
    </h3>
  {{/unless}}

  {{#each playlists}}
    <section class="ui left aligned middle aligned segment">

      <h3 class="ui header">
        {{title}}
      </h3>
      <p>
        {{#if songs}}
        
          Total songs: {{songs.length}}
        
          {{else}}
          Empty playlist!
        
        {{/if}}
      </p>

      <a href="/playlist/{{id}}"> <i class="black open folder outline icon"></i> </a>

    </section>
  {{/each}}

</section>
